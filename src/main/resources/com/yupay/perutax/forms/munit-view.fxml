<?import javafx.stage.Stage?>

<Stage fx:id="top" title="Maestra de Unidades de Medida" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yupay.perutax.forms.MunitView">
    <scene>
        <Scene>
         <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
            <children>
               <ToolBar>
                  <items>
                     <Button contentDisplay="GRAPHIC_ONLY" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#reloadAction" prefHeight="32.0" prefWidth="32.0">
                        <tooltip>
                           <Tooltip maxWidth="300.0" text="Recargar desde la base de datos." wrapText="true">
                              <graphic>
                                 <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                       <Image url="@png/icons8-sync-64.png" />
                                    </image>
                                 </ImageView>
                              </graphic>
                           </Tooltip>
                        </tooltip>
                        <graphic>
                           <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@png/icons8-sync-24.png" />
                              </image>
                           </ImageView>
                        </graphic>
                     </Button>
                     <Button contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#createAction" prefHeight="32.0" prefWidth="32.0">
                        <tooltip>
                           <Tooltip maxWidth="300.0" text="Crear nueva unidad de medida." wrapText="true">
                              <graphic>
                                 <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                       <Image url="@png/icons8-add-row-64.png" />
                                    </image>
                                 </ImageView>
                              </graphic>
                           </Tooltip>
                        </tooltip>
                        <graphic>
                           <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@png/icons8-add-row-24.png" />
                              </image>
                           </ImageView>
                        </graphic>
                     </Button>
                     <Button contentDisplay="GRAPHIC_ONLY" layoutX="46.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#editAction" prefHeight="32.0" prefWidth="32.0">
                        <tooltip>
                           <Tooltip maxWidth="300.0" text="Editar unidad de medida seleccionada." wrapText="true">
                              <graphic>
                                 <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                       <Image url="@png/icons8-edit-row-64.png" />
                                    </image>
                                 </ImageView>
                              </graphic>
                           </Tooltip>
                        </tooltip>
                        <graphic>
                           <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@png/icons8-edit-row-24.png" />
                              </image>
                           </ImageView>
                        </graphic>
                     </Button>
                     <Separator orientation="VERTICAL" />
                     <CheckBox fx:id="chkFilter" maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" prefHeight="32.0" text="Filtrar:" />
                     <TextField fx:id="txtFilter" maxHeight="-Infinity" minHeight="-Infinity" prefColumnCount="15" prefHeight="32.0" promptText="¿Qué quieres encontrar?" />
                  </items>
               </ToolBar>
               <TableView fx:id="tblData" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                 <columns>
                   <TableColumn fx:id="colID" editable="false" prefWidth="250.0" text="Object ID" visible="false" />
                   <TableColumn fx:id="colTaxID" editable="false" prefWidth="150.0" text="Código" />
                     <TableColumn fx:id="colDescription" editable="false" prefWidth="200.0" text="Nombre" />
                     <TableColumn fx:id="colSymbol" editable="false" prefWidth="150.0" text="Símbolo" />
                     <TableColumn fx:id="colTrash" editable="false" prefWidth="75.0" text="Basurero" />
                 </columns>
               </TableView>
            </children>
         </VBox>
        </Scene>
    </scene>
