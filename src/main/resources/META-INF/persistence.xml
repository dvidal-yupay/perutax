<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="PUperutax">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!--Enums-->
        <class>com.yupay.perutax.entities.Currenci</class>
        <class>com.yupay.perutax.entities.AccountNature</class>
        <class>com.yupay.perutax.entities.CostGroup</class>

        <!--Entities-->
        <class>com.yupay.perutax.entities.Country</class>
        <class>com.yupay.perutax.entities.Person</class>
        <class>com.yupay.perutax.entities.TypeDOI</class>
        <class>com.yupay.perutax.entities.Correlative</class>
        <class>com.yupay.perutax.entities.CostCenter</class>
        <class>com.yupay.perutax.entities.TaxAccount</class>
        <class>com.yupay.perutax.entities.TaxPeriod</class>
        <class>com.yupay.perutax.entities.XRate</class>
        <class>com.yupay.perutax.entities.TypeFolio</class>
        <class>com.yupay.perutax.entities.Journal</class>
        <class>com.yupay.perutax.entities.JournalDt</class>
        <class>com.yupay.perutax.entities.JournalDtFolio</class>
        <class>com.yupay.perutax.entities.JournalDtPerson</class>
        <class>com.yupay.perutax.entities.Subdiary</class>
        <class>com.yupay.perutax.entities.JournalSnapshot</class>
        <!--TODO: remove this before sharing.-->
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/perutaxdb"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        </properties>

    </persistence-unit>
</persistence>